<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <declare-styleable name="mc_CalendarView">
        <attr name="mc_headerColor" format="color" />
        <attr name="mc_headerLabelColor" format="color" />
        <attr name="mc_previousButtonSrc" format="integer" />
        <attr name="mc_forwardButtonSrc" format="integer" />
        <attr name="mc_todayLabelColor" format="color" />
        <attr name="mc_selectionColor" format="color" />
        <attr name="mc_selectionLabelColor" format="color" />
        <attr name="mc_disabledDaysLabelsColor" format="color" />
        <attr name="mc_highlightedDaysLabelsColor" format="color" />
        <attr name="mc_pagesColor" format="color" />
        <attr name="mc_abbreviationsBarColor" format="color" />
        <attr name="mc_abbreviationsLabelsColor" format="color" />
        <attr name="mc_daysLabelsColor" format="color" />
        <attr name="mc_anotherMonthsDaysLabelsColor" format="color" />
        <attr name="mc_eventsEnabled" format="boolean" />
        <attr name="mc_swipeEnabled" format="boolean" />
        <attr name="mc_selectionDisabled" format="boolean" />
        <attr name="mc_selectionBetweenMonthsEnabled" format="boolean" />
        <attr name="mc_maximumDaysRange" format="integer" />
        <attr name="mc_typeface" format="integer" />
        <attr name="mc_todayTypeface" format="integer" />
        <attr name="mc_type" />
        <attr name="mc_firstDayOfWeek" />
    </declare-styleable>

    <attr name="mc_type" format="enum">
        <enum name="classic" value="0" />
        <enum name="one_day_picker" value="1" />
        <enum name="many_days_picker" value="2" />
        <enum name="range_picker" value="3" />
    </attr>

    <attr name="mc_firstDayOfWeek" format="enum">
        <enum name="sunday" value="1" />
        <enum name="monday" value="2" />
        <enum name="tuesday" value="3" />
        <enum name="wednesday" value="4" />
        <enum name="thursday" value="5" />
        <enum name="friday" value="6" />
        <enum name="saturday" value="7" />
    </attr>
</resources>